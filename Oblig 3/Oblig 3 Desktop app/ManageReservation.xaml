<Page x:Class="Oblig_3_Desktop_app.ManageReservation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oblig_3_Desktop_app"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageReservation">

    <Grid>
        <Label Content="Manage Reservation" HorizontalAlignment="Left" Margin="38,17,0,0" VerticalAlignment="Top"/>
        <Button Content="Home" HorizontalAlignment="Left" Margin="38,387,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <DataGrid x:Name="reservationGrid" AutoGenerateColumns="False" ColumnWidth="*" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Start date" Binding="{Binding startDate}"/>
                <DataGridTextColumn Header="End date" Binding="{Binding endDate}"/>
                <DataGridTextColumn Header="Hotel Room" Binding="{Binding HotelRoomId}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
